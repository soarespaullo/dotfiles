#!/bin/sh

notify-send --expire-time=3000 -i "/usr/share/icons/Papirus/32x32/apps/yast-kerberos.svg" "Bloqueando a Tela"

B='#00000000'  # blank
C='#ffffff22'  # clear ish
D='#f1f1f1cc'  # default
T='#FFFFFFFF'  # text
W='#73d216bb'  # wrong
V='#FFFFFFFF'  # verifying

i3lock \
-i ~/.config/i3lock/arch.jpg \
--insidevercolor=$C   \
--ringvercolor=$V     \
\
--insidewrongcolor=$C \
--ringwrongcolor=$W   \
\
--insidecolor=$B      \
--ringcolor=$D        \
--linecolor=$B        \
--separatorcolor=$D   \
--show-failed-attempts \
\
--veriftext="Verificando" \
--wrongtext="Erro" \
--noinputtext="Vazio" \
--verifcolor=$T       \
--wrongcolor=$T       \
--timecolor=$T        \
--datecolor=$T        \
--layoutcolor=$T      \
--keyhlcolor=$W       \
--bshlcolor=$W        \
\
--screen 1            \
--blur 5              \
--clock               \
--indicator           \
--timestr="%H:%M:%S"  \
--datestr="%A, %m %Y" \
--keylayout 2  2>/dev/null  \
\
--greetertext="Digite a senha para desbloquear." \
--greetercolor=$D \
--greeterpos="816:700" \ 
